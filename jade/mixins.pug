mixin slider_form()
  form.strategyForm.validateMe(action='#')
    .f_cell
      .fl: .dm
        label.label_v1 Ваш возраст
      .input_w.fr.select_box_v1
        select.select2(class='validate[required]' data-placeholder='выберите из списка' name='age')
          option(disabled selected value=0)
          option(value=1) от 18 до 30
          option(value=2) от 30 до 50
          option(value=3) более 50

    .f_cell
      .fl: .dm
        label.label_v1 Я готов инвестировать
      .input_w.fr.select_box_v1
        select.select2(class='validate[required]' data-placeholder='выберите из списка' name='sum')
          option(disabled selected value=0)
          option(value=1) до 1 млн.
          option(value=2) от 1 до 5 млн
          option(value=3) более 5 млн

    .f_cell
      .fl: .dm
        label.label_v1 На срок
      .input_w.fr.select_box_v1
        select.select2(class='validate[required]' data-placeholder='выберите из списка' name='period')
          option(disabled selected value=0)
          option(value=1) менее 3 лет
          option(value=2) 3-5 лет
          option(value=3) более 5 лет

    .f_cell
      .fl: .dm
        label.label_v1 Риск
      .input_w.fr.select_box_v1
        select.select2(class='validate[required]' data-placeholder='выберите из списка' name='risk')
          option(disabled selected value=0)
          option(value=1) 0-10%
          option(value=2) 10%
          option(value=3) 25%
          option(value=4) 50%

    .f_cell
      .input_w.fr.select_box_v1
        button.btn_v2.green_btn_2.action_btn.strategyBtn
          span.fw_b Получить фин.план

