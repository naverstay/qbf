mixin loop_while(counter)
    -i=0;
    while i < counter
        -i++;
        block

mixin header()
  .header
    .section_inner.clearfix
      ul.main_menu
        li.menu_item
          a.menu_link(href='www.qbfin.ru')
            span.link_text www.qbfin.ru
        li.menu_item
          a.btn_v1.cabinet_btn.green_btn(href='#')
            span.fw_b Личный кабинет
            
      .logo_block
        a.logo(href='#')
          img(src='svg/qbf_logo.svg' width=145 height=37)

      .phone_block
        a.callback_link(href='tel:+78124072112')
          span.i-phone
          span.fw_b.link_text +7 (812) 407-21-12
            
mixin callback_holder()
  .callback_holder
    .callback_info
      h3.callback_title.fadeMeUp Получите 
      h4.callback_tip.fadeMeUp персональную консультацию по стратегиям.
      p.fadeMeUp Мы перезвоним вам в течение 20-ти минут.

    .callback_form.fadeMeUp
      form(action='#')
        .f_cell
          .input_w
            input.f_input_v1(placeholder='Как вас зовут')
        .f_cell
          .input_w
            input.f_input_v1(placeholder='Телефон или почта')
  
        .f_cell
          label.check_v1
            input.inp_hidden(type='checkbox')
            span.check_text Я даю свое согласие на обработку персональных данных
  
        .f_cell
          button.btn_v2.callback_btn.gray_btn
            span.fw_b Получить консультацию

