mixin callback_holder(anim)
  .callback_holder
    .callback_info
      h3.callback_title(class = anim ? 'fadeMeUp' : '') Получите
      h4.callback_tip(class = anim ? 'fadeMeUp' : '') персональную консультацию по стратегиям.
      p(class = anim ? 'fadeMeUp' : ''): span Мы перезвоним вам в течение 20-ти минут.
      p.respond: span Сообщение отправлено

    .callback_form(class = anim ? 'fadeMeUp' : '')
      form.sendOrder(action='mailer.php' method='post')
        .f_cell
          .input_w
            input.f_input_v1(placeholder='Как вас зовут' name='name')
        .f_cell
          .input_w
            input.f_input_v1(placeholder='Телефон или почта' name='phone')

        .f_cell
          label.check_v1
            input.agreement.inp_hidden(type='checkbox' name='agreement')
